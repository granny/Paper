diff --git a/net/minecraft/world/item/ItemUtils.java b/net/minecraft/world/item/ItemUtils.java
index 327ed87a832eb80d67c80a508b58f54381971f47..9fae6d24d67337bd7f2adc1cc244b75b42ae78ce 100644
